{% extends 'mainBundle:Main:layout.html.twig' %}

{% block title %}Réserver une salle - Gestion Réservation{% endblock %}

{% block menu %}reserver{% endblock %}

{% block body %}
<h1 class="text-center">Réserver une salle</h1>

{% for flashMessage in app.session.flashbag.get('attention') %}
    <div class="flash-notice">
        {{ flashMessage }}
    </div>
{% endfor %}

{#{ form(formulaire_reservation) }#}

<div class="center-block col-xs-12 col-lg-12">
{{ form_start(formulaire_reservation) }}
	<div class="form-group">
		<label class="col-sm-3">Nom</label>
		{{ form_widget(formulaire_reservation.nom) }}
	</div>
	<div class="form-group">
		<label class="col-sm-3">Mail</label>
		{{ form_widget(formulaire_reservation.mail) }}
	</div>
	<div class="form-group">
		<label class="col-sm-3">Début</label>
		{{ form_widget(formulaire_reservation.dateDebut) }}
	</div>
	<div class="form-group">
		<label class="col-sm-3">Fin</label>
		{{ form_widget(formulaire_reservation.dateFin) }}
	</div>
	
	<div class="form-group">
		<label class="col-sm-3">Salle à réserver</label>
		{{ form_widget(formulaire_reservation.salle) }}
	</div>
	
	{{ form_widget(formulaire_reservation.ajouter) }}
{{ form_end(formulaire_reservation) }}
</div>

{% endblock %}
