{% extends 'mainBundle:Main:layout.html.twig' %}

{% block title %}Réserver une salle - Gestion Réservation{% endblock %}

{% block menu %}reserver{% endblock %}

{% block body %}
<h1 class="text-center">Réserver une salle</h1>

<div class="center-block">
<form action="" method="POST" class="form-horizontal">
	<div class="form-group">
		<label class="col-sm-2">Nom</label>
		<input type='text' name='nom' class="col-sm-4" />
	</div>
	<div class="form-group">
		<label class="col-sm-2">Mail</label>
		<input type='email' name='mail' class="col-sm-4" />
	</div>
	<div class="form-group">
		<label class="col-sm-2">Début</label>
		<input type='datetime' name='dateDebut' class="col-sm-4" />
	</div>
	<div class="form-group">
		<label class="col-sm-2">Fin</label>
		<input type='datetime' name='dateFin' class="col-sm-4" />
	</div>
	<div class="form-group">
		<label class="col-sm-2">Salle</label>
		<select class="col-sm-4"></select>
	</div>
	
	<button type="submit" class="btn btn-default">Réserver</button>
</form>
</div>
{% endblock %}
